<!-- CHÔ NÀY ĐỂ LẤY SIZE VÀ MÀU NÈ-->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {    
        $("input[type='radio']").change(function () {
            var select_size = $("input[name='select']:checked").val();
            var select_color = $("input[name='options_outlined']:checked").val();
            $("#soluong").text(select_size + "-" + select_color);
        });
    });
</script>
    